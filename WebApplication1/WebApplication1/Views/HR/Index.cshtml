@model IEnumerable<WebApplication1.Models.User>

@{
    ViewData["Title"] = "HR - User Management";
}

<h2 class="mb-3">User Management</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Create New User</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Hourly Rate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UserId</td>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.Role</td>
                    <td>R @u.HourlyRate.ToString("N2")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@u.UserId" class="btn btn-sm btn-warning">Edit</a>

                        <form asp-action="Delete" asp-route-id="@u.UserId"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure?');">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- UPDATED: CSV button instead of PDF button -->
<a asp-controller="HR" asp-action="ExportUsersCsv" class="btn btn-outline-info mt-3">
    📄 Download Users CSV
</a>
