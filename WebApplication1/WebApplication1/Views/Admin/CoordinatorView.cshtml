@model IEnumerable<WebApplication1.Models.Claim>
@{
    ViewData["Title"] = "Coordinator - Pending Claims";
}

<h2 class="mb-4">Pending Claims (Programme Coordinator)</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no pending claims at this time.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Lecturer</th>
                <th>Total (R)</th>
                <th>Submitted</th>
                <th>Documents</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.LecturerName</td>
                    <td>@c.TotalAmount.ToString("N2")</td>
                    <td>@c.SubmissionDate.ToString("yyyy-MM-dd")</td>

                    <td>
                        @foreach (var d in c.Documents)
                        {
                            <a asp-controller="Lecturer"
                               asp-action="DownloadDocument"
                               asp-route-documentId="@d.DocumentId"
                               class="btn btn-sm btn-outline-secondary mb-1">
                                @d.FileName
                            </a>
                        }
                    </td>

                    <td>
                        <form asp-action="VerifyClaim" method="post" class="d-inline">
                            <input type="hidden" name="claimId" value="@c.ClaimId" />
                            <button class="btn btn-success btn-sm">Verify</button>
                        </form>

                        <form asp-action="RejectClaim" method="post" class="d-inline">
                            <input type="hidden" name="claimId" value="@c.ClaimId" />
                            <input type="hidden" name="role" value="Coordinator" />
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </form>

                        <a asp-action="ViewClaim" asp-route-id="@c.ClaimId"
                           class="btn btn-sm btn-outline-primary mt-1">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}