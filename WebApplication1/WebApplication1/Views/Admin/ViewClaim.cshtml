@model WebApplication1.Models.Claim

@{
    ViewData["Title"] = "View Claim Details";
}

<h2>Claim Details</h2>

<div class="card mb-3">
    <div class="card-header bg-dark text-white">
        Claim #@Model.ClaimId
    </div>
    <div class="card-body">

        <p><strong>Lecturer:</strong> @Model.LecturerName</p>
        <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
        <p><strong>Hourly Rate:</strong> R @Model.HourlyRate.ToString("N2")</p>
        <p><strong>Total Amount:</strong> <span class="fw-bold text-success">R @((Model.HourlyRate * Model.HoursWorked).ToString("N2"))</span></p>

        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Submitted:</strong> @Model.SubmissionDate.ToShortDateString()</p>
        <p><strong>Last Updated By:</strong> @Model.ApprovedBy</p>

        <hr />

        <h5>Documents</h5>

        @if (Model.Documents == null || !Model.Documents.Any())
        {
            <p class="text-muted">No documents uploaded.</p>
        }
        else
        {
            <ul>
                @foreach (var doc in Model.Documents)
                {
                    <li>
                        @doc.FileName
                        <a asp-controller="Lecturer" asp-action="DownloadDocument" asp-route-documentId="@doc.DocumentId" class="btn btn-sm btn-outline-primary">Download</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

<a onclick="history.back()" class="btn btn-secondary">Back</a>
