@model IEnumerable<WebApplication1.Models.Claim>

@{
    ViewData["Title"] = "Manager - Verified Claims";
}

<h2 class="mb-3">Verified Claims (Academic Manager)</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No verified claims awaiting approval.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Verified By</th>
                <th>Submitted</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.ClaimId</td>
                    <td>@c.LecturerName</td>
                    <td>@c.HoursWorked</td>
                    <td>R @c.HourlyRate.ToString("N2")</td>
                    <td>R @((c.HourlyRate * c.HoursWorked).ToString("N2"))</td>
                    <td>@c.ApprovedBy</td>
                    <td>@c.SubmissionDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="ViewClaim" asp-route-id="@c.ClaimId" class="btn btn-sm btn-info">View</a>

                        <form asp-action="ApproveClaim" asp-route-claimId="@c.ClaimId" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>

                        <form asp-action="RejectClaim" asp-route-claimId="@c.ClaimId" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
