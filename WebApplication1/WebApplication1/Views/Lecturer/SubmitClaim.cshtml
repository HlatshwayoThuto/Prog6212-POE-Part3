@model WebApplication1.Models.Claim

@{
    ViewData["Title"] = "Submit a Claim";
}

<h2 class="mb-3">Submit a Claim</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-sm">
        <h4 class="mb-3">Lecturer Information</h4>

        <div class="mb-3">
            <label class="form-label">Lecturer Name</label>
            <input class="form-control" value="@Model.LecturerName" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Hourly Rate (R)</label>
            <input asp-for="HourlyRate" class="form-control" readonly />
        </div>

        <hr />

        <h4 class="mb-3">Claim Details</h4>

        <div class="mb-3">
            <label class="form-label">Hours Worked</label>
            <input asp-for="HoursWorked" class="form-control" type="number" min="1" max="200" id="hoursInput" />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Total Amount (Auto)</label>
            <input class="form-control" id="totalAmount" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Upload Supporting Document</label>
            <input type="file" name="supportingDocument" class="form-control" accept=".pdf,.docx,.xlsx" />
        </div>

        <button class="btn btn-primary mt-2">Submit Claim</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function updateTotal() {
            let hours = parseFloat(document.getElementById("hoursInput").value);
            let rate = parseFloat("@Model.HourlyRate");

            if (!isNaN(hours) && hours > 0) {
                document.getElementById("totalAmount").value = "R " + (hours * rate).toFixed(2);
            }
        }

        document.getElementById("hoursInput").addEventListener("input", updateTotal);
    </script>
}
