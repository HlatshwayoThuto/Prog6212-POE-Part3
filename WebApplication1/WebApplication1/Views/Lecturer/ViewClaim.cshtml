@model WebApplication1.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<h2 class="mb-3">Claim Details</h2>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Lecturer: @Model.LecturerName</h5>
    </div>

    <div class="card-body">

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Hours Worked:</strong>
                <div>@Model.HoursWorked</div>
            </div>

            <div class="col-md-4">
                <strong>Hourly Rate:</strong>
                <div>R @Model.HourlyRate.ToString("N2")</div>
            </div>

            <div class="col-md-4">
                <strong>Total Amount:</strong>
                <div class="fw-bold">R @((Model.HoursWorked * Model.HourlyRate).ToString("N2"))</div>
            </div>
        </div>

        <hr />

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Status:</strong>
                <br />

                @if (Model.Status == "Pending")
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
                else if (Model.Status == "Verified")
                {
                    <span class="badge bg-info text-dark">Verified</span>
                }
                else if (Model.Status == "Approved")
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.Status == "Rejected")
                {
                    <span class="badge bg-danger">Rejected</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.Status</span>
                }
            </div>

            <div class="col-md-4">
                <strong>Submitted:</strong>
                <div>@Model.SubmissionDate.ToShortDateString()</div>
            </div>

            <div class="col-md-4">
                <strong>Approved / Verified By:</strong>
                <div>@(string.IsNullOrEmpty(Model.ApprovedBy) ? "—" : Model.ApprovedBy)</div>
            </div>
        </div>

        <hr />

        <h5 class="mb-3">Supporting Documents</h5>

        @if (Model.Documents != null && Model.Documents.Any())
        {
            <ul class="list-group mb-3">
                @foreach (var doc in Model.Documents)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@doc.FileName</span>

                        <a asp-action="DownloadDocument"
                           asp-route-documentId="@doc.DocumentId"
                           class="btn btn-sm btn-outline-primary">
                            Download
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No documents uploaded.</p>
        }

        <a href="javascript:history.back()" class="btn btn-secondary mt-2">
            ← Back
        </a>
    </div>
</div>
