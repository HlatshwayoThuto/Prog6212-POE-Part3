@model IEnumerable<WebApplication1.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<h2 class="mb-3">My Claims</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have not submitted any claims yet.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Status</th>
                <th>Submitted</th>
                <th>Documents</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.ClaimId</td>
                    <td>@c.HoursWorked</td>
                    <td>R @c.HourlyRate.ToString("N2")</td>
                    <td>R @((c.HoursWorked * c.HourlyRate).ToString("N2"))</td>

                    <td>
                        @if (c.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (c.Status == "Verified")
                        {
                            <span class="badge bg-info text-dark">Verified</span>
                        }
                        else if (c.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (c.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@c.Status</span>
                        }
                    </td>

                    <td>@c.SubmissionDate.ToShortDateString()</td>

                    <td>
                        @if (c.Documents != null && c.Documents.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var d in c.Documents)
                                {
                                    <li>
                                        <a asp-action="DownloadDocument"
                                           asp-route-documentId="@d.DocumentId"
                                           class="btn btn-sm btn-outline-primary">
                                            @d.FileName
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
