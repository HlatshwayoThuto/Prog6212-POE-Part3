@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

@{
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    var role = User.FindFirst(ClaimTypes.Role)?.Value ?? "";
    var fullName = User.Identity?.Name ?? "User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lecturer Claim System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Claim System</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <ul class="navbar-nav me-auto">

                    <!-- Always visible -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <!-- ======================================================
                         LECTURER MENU (only lecturers)
                    ====================================================== -->
                    @if (isLoggedIn && role == "Lecturer")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Lecturer" asp-action="SubmitClaim">
                                Submit Claim
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Lecturer" asp-action="TrackClaims">
                                Track My Claims
                            </a>
                        </li>
                    }

                    <!-- ======================================================
                         COORDINATOR MENU
                    ====================================================== -->
                    @if (isLoggedIn && role == "Coordinator")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="CoordinatorView">
                                Coordinator Dashboard
                            </a>
                        </li>
                    }

                    <!-- ======================================================
                         MANAGER MENU
                    ====================================================== -->
                    @if (isLoggedIn && role == "Manager")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ManagerView">
                                Manager Dashboard
                            </a>
                        </li>
                    }

                    <!-- ======================================================
                         HR MENU
                    ====================================================== -->
                    @if (isLoggedIn && role == "HR")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HR" asp-action="Index">
                                HR Users
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="HR" asp-action="GenerateUsersPdf">
                                Generate Reports
                            </a>
                        </li>
                    }

                </ul>

                <!-- RIGHT SIDE: LOGIN / LOGOUT -->
                <ul class="navbar-nav">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                                Welcome, <strong>@fullName</strong> (@role)
                            </span>
                        </li>

                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container mt-4">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
